{
  "name": "@fordi-org/buildless",
  "version": "1.0.3",
  "description": "Write react-like apps without a build process",
  "author": "",
  "scripts": {
    "build:runtime": "microbundle -i src/index.js -o dist/buildless.js --raw --compress --strict -f modern",
    "build:prod": "microbundle -i src/prod.js -o dist/buildless.prod.js --raw --compress --strict -f modern",
    "build": "npm run build:runtime && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "github:Fordi/buildless"
  },
  "browser": "dist/buildless.modern.js",
  "license": "ISC",
  "devDependencies": {
    "htm": "^3.0.4",
    "microbundle": "^0.12.2",
    "preact": "^10.4.5"
  },
  "files": [
    "dist/buildless.modern.js",
    "dist/buildless.modern.js.map",
    "dist/buildless.prod.modern.js",
    "dist/buildless.prod.modern.js.map",
    "README.md"
  ],
  "engines": {
    "node": ">=10.21.0"
  }
}
